@model BrandEditVm
@{
	ViewData["Title"] = "Add brand";
}
<form method="post" asp-controller="Brands" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Adding new brand</h2>
		</div>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="BrandName">Brand name</label>
			<input asp-for="BrandName" class="form-control" />
			<span asp-validation-for="BrandName" class="text-danger"></span>

		</div>
		<button type="-submit" class="btn btn-success">
			<i class="bi bi-floppy"></i>
			Add
		</button>
		<a asp-controller="Brands" asp-action="Index" class="btn btn-info">
			<i class="bi bi-x-square"></i>
			Cancel
		</a>
		
	</div>
</form>
