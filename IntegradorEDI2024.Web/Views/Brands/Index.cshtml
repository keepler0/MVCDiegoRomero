@model IEnumerable<Brand>
@{
	ViewData["Title"] = "Brands list";
}
@if(TempData["success"]!=null)
{
	var ms=TempData["success"]?.ToString();
	<div class="alert alert-success d-flex align-items-center w-75" role="alert">
	  <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
		  <div>
				<strong>Very nice! </strong>@ms.
		  </div>
	</div>
}
<div class="row w-75 mb-4">
	<div class="col-6"></div>
		<div class="col-6 text-end">
			<a asp-controller="Brands" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square-fill"></i>
				Nuevo
				</a>
		</div>
</div>

<h1>Brands list</h1>
<table class="table table-bordered table-hover w-75">
    <thead>
		<tr>
			<th>Brand</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Any())
		{
			foreach (var item in Model)
			{
				<tr>
					<td>@item.BrandName</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td>Sin datos</td>
			</tr>
		}
	</tbody>
</table>
